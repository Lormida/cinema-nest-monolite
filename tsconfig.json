{
  "compilerOptions": {
    "types": ["node", "jest", "express", "multer"],
    "strict": true,
    "baseUrl": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2017",
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "typeRoots": ["./node_modules/@types", "shared-kernel.d.ts"],
    "paths": {
      "src/*": ["./src/*"]
    },
  },
  "exclude": ["node_modules"],
  "include": [
    "./shared-kernel.d.ts",
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./utils/**/*.ts",
    "./prisma/*.ts", "prisma/seed.ts",
  ]
}
